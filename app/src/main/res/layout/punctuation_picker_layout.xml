<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayoutPunctuationPicker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.AppCompat.Light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <org.ghostsinthelab.apps.guilelessbopomofo.KeyButton
            android:id="@+id/keyButtonIdeographicComma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="、"
            app:keySymbolString="、"
            app:keyTypeEnum="KEYTYPE_CHARACTER" />

        <org.ghostsinthelab.apps.guilelessbopomofo.KeyButton
            android:id="@+id/keyButtonQuestionMark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="？"
            app:keySymbolString="？"
            app:keyTypeEnum="KEYTYPE_CHARACTER" />

        <org.ghostsinthelab.apps.guilelessbopomofo.KeyButton
            android:id="@+id/keyButtonPeriod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="。"
            app:keySymbolString="。"
            app:keyTypeEnum="KEYTYPE_CHARACTER" />

        <org.ghostsinthelab.apps.guilelessbopomofo.KeyImageButton
            android:id="@+id/keyImageButtonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:onClick="onClick"
            app:srcCompat="@drawable/ic_baseline_undo_24" />

    </LinearLayout>

</LinearLayout>