<?xml version="1.0" encoding="utf-8"?>
<org.ghostsinthelab.apps.guilelessbopomofo.KeyboardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/keyboardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/Theme.AppCompat.Light"
    android:visibility="visible">


    <LinearLayout
        android:id="@+id/linearLayoutBufferTextViews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:orientation="horizontal">

        <org.ghostsinthelab.apps.guilelessbopomofo.PreEditBufferTextView
            android:id="@+id/textViewPreEditBuffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2196F3"
            android:bufferType="spannable"
            android:fontFamily="serif"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewBopomofoBuffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00BCD4"
            android:fontFamily="serif"
            android:textSize="24sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutKeyboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <LinearLayout
            android:id="@+id/linearLayoutKeyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayoutKeyboardRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:theme="@style/KeyboardTheme">

                <org.ghostsinthelab.apps.guilelessbopomofo.KeyImageButton
                    android:id="@+id/keyImageButtonSymbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:scaleType="fitCenter"
                    app:keyCodeString="KEYCODE_PICTSYMBOLS"
                    app:keyTypeEnum="KEYTYPE_CONTROL"
                    app:srcCompat="@drawable/ic_baseline_sentiment_satisfied_alt_24" />

                <org.ghostsinthelab.apps.guilelessbopomofo.KeyImageButton
                    android:id="@+id/keyImageButtonW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:scaleType="fitCenter"
                    app:keySymbolString="w"
                    app:keyTypeEnum="KEYTYPE_CHARACTER"
                    app:srcCompat="@drawable/ic_guileless_bopomofo_keyboard_ao" />

                <org.ghostsinthelab.apps.guilelessbopomofo.KeyImageButton
                    android:id="@+id/keyImageButtonE"
                    android:layout_width="wrap_content"
