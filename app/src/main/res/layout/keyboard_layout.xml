                    android:layout_weight="0"
                    android:onClick="onClick"
                    android:scaleType="fitCenter"
                    app:keySymbolString="z"
                    app:keyTypeEnum="KEYTYPE_CHARACTER"
                    app:srcCompat="@drawable/ic_guileless_bopomofo_keyboard_zi" />

                <org.ghostsinthelab.apps.guilelessbopomofo.KeyImageButton
                    android:id="@+id/keyImageButtonX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:onClick="onClick"
                    android:scaleType="fitCenter"
                    app:keySymbolString="x"
                    app:keyTypeEnum="KEYTYPE_CHARACTER"
                    app:srcCompat="@drawable/ic_guileless_bopomofo_keyboard_wu" />

                <org.ghostsinthelab.apps.guilelessbopomofo.KeyImageButton
                    android:id="@+id/keyImageButtonC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:onClick="onClick"
                    android:scaleType="fitCenter"
                    app:keySymbolString="c"
                    app:keyTypeEnum="KEYTYPE_CHARACTER"
                    app:srcCompat="@drawable/ic_guileless_bopomofo_keyboard_hsu_x_shi" />

                <org.ghostsinthelab.apps.guilelessbopomofo.KeyImageButton
                    android:id="@+id/keyImageButtonV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:onClick="onClick"
                    android:scaleType="fitCenter"
                    app:keySymbolString="v"
                    app:keyTypeEnum="KEYTYPE_CHARACTER"
                    app:srcCompat="@drawable/ic_guileless_bopomofo_keyboard_hsu_q_chi" />

                <org.ghostsinthelab.apps.guilelessbopomofo.KeyImageButton
                    android:id="@+id/keyImageButtonB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:onClick="onClick"
                    android:scaleType="fitCenter"
                    app:keyCodeString="KEYCODE_B"
                    app:keySymbolString="b"
                    app:keyTypeEnum="KEYTYPE_CHARACTER"
                    app:srcCompat="@drawable/ic_guileless_bopomofo_keyboard_b" />

                <org.ghostsinthelab.apps.guilelessbopomofo.KeyImageButton
                    android:id="@+id/keyImageButtonN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:onClick="onClick"
                    android:scaleType="fitCenter"
                    app:keySymbolString="n"
                    app:keyTypeEnum="KEYTYPE_CHARACTER"
                    app:srcCompat="@drawable/ic_guileless_bopomofo_keyboard_hsu_n_en" />

                <org.ghostsinthelab.apps.guilelessbopomofo.KeyImageButton
                    android:id="@+id/keyImageButtonM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:onClick="onClick"
                    android:scaleType="fitCenter"
                    app:keyCodeString="KEYCODE_M"
                    app:keySymbolString="m"
                    app:keyTypeEnum="KEYTYPE_CHARACTER"
                    app:srcCompat="@drawable/ic_guileless_bopomofo_keyboard_hsu_m_an" />

                <org.ghostsinthelab.apps.guilelessbopomofo.KeyImageButton
                    android:id="@+id/keyImageButtonPunc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:onClick="onClick"
                    android:scaleType="fitCenter"
                    app:keyCodeString="KEYCODE_COMMA"
                    app:keySymbolString=","
                    app:keyTypeEnum="KEYTYPE_CHARACTER"
                    app:srcCompat="@drawable/ic_guileless_bopomofo_keyboard_punctuation" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutKeyboardRow4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:theme="@style/KeyboardTheme">

                <org.ghostsinthelab.apps.guilelessbopomofo.KeyImageButton
                    android:id="@+id/keyImageButtonImeSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_baseline_language_24"
                    app:keyTypeEnum="KEYTYPE_FUNCTION" />

                <org.ghostsinthelab.apps.guilelessbopomofo.KeyImageButton
                    android:id="@+id/keyImageButtonSpace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:onClick="onClick"
                    android:scaleType="fitCenter"
                    app:keyCodeString="KEYCODE_SPACE"
                    app:keyTypeEnum="KEYTYPE_CONTROL"
                    app:srcCompat="@drawable/ic_baseline_space_bar_24" />

                <org.ghostsinthelab.apps.guilelessbopomofo.KeyImageButton
                    android:id="@+id/keyImageButtonBackspace"
                    android:layout_width="wrap_content"
