                <org.ghostsinthelab.apps.guilelessbopomofo.KeyImageButton
                    android:id="@+id/keyImageButtonEnter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:backgroundTint="#8BC34A"
                    android:onClick="onClick"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_baseline_keyboard_return_24"
                    app:keyCodeString="KEYCODE_ENTER"
                    app:keyTypeEnum="KEYTYPE_CONTROL" />

            </LinearLayout>

        </LinearLayout>

        <include
            android:id="@+id/includeSymbolsPicker"
            layout="@layout/symbols_picker_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</org.ghostsinthelab.apps.guilelessbopomofo.KeyboardView>