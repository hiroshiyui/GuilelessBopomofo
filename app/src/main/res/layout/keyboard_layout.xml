                <org.ghostsinthelab.apps.guilelessbopomofo.KeyImageButton
                    android:id="@+id/keyImageButtonU"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:scaleType="fitCenter"
                    app:keySymbolString="u"
                    app:keyTypeEnum="KEYTYPE_CHARACTER"
                    app:srcCompat="@drawable/ic_guileless_bopomofo_keyboard_yu" />

                <org.ghostsinthelab.apps.guilelessbopomofo.KeyImageButton
                    android:id="@+id/keyImageButtonI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:scaleType="fitCenter"
                    app:keySymbolString="i"
                    app:keyTypeEnum="KEYTYPE_CHARACTER"
                    app:srcCompat="@drawable/ic_guileless_bopomofo_keyboard_ai" />

                <org.ghostsinthelab.apps.guilelessbopomofo.KeyImageButton
                    android:id="@+id/keyImageButtonO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:scaleType="fitCenter"
                    app:keySymbolString="o"
                    app:keyTypeEnum="KEYTYPE_CHARACTER"
                    app:srcCompat="@drawable/ic_guileless_bopomofo_keyboard_ou" />

                <org.ghostsinthelab.apps.guilelessbopomofo.KeyImageButton
                    android:id="@+id/keyImageButtonP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:scaleType="fitCenter"
                    app:keyCodeString="KEYCODE_P"
                    app:keySymbolString="p"
                    app:keyTypeEnum="KEYTYPE_CHARACTER"
                    app:srcCompat="@drawable/ic_guileless_bopomofo_keyboard_p" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutKeyboardRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:theme="@style/KeyboardTheme">

                <org.ghostsinthelab.apps.guilelessbopomofo.KeyImageButton
                    android:id="@+id/keyImageButtonA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:scaleType="fitCenter"
                    app:keySymbolString="a"
                    app:keyTypeEnum="KEYTYPE_CHARACTER"
                    app:srcCompat="@drawable/ic_guileless_bopomofo_keyboard_hsu_ci_ei" />

                <org.ghostsinthelab.apps.guilelessbopomofo.KeyImageButton
                    android:id="@+id/keyImageButtonS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:scaleType="fitCenter"
                    app:keySymbolString="s"
                    app:keyTypeEnum="KEYTYPE_CHARACTER"
