<?xml version="1.0" encoding="utf-8"?>
<org.ghostsinthelab.apps.guilelessbopomofo.KeyboardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/keyboardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/Theme.AppCompat.Light"
    android:visibility="visible">


    <LinearLayout
        android:id="@+id/linearLayoutBufferTextViews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:orientation="horizontal">

        <org.ghostsinthelab.apps.guilelessbopomofo.PreEditBufferTextView
            android:id="@+id/textViewPreEditBuffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2196F3"
            android:bufferType="spannable"
            android:fontFamily="serif"
            android:textColor="#FFFFFF"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/textViewBopomofoBuffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00BCD4"
            android:fontFamily="serif"
            android:textSize="26sp" />
    </LinearLayout>

    <org.ghostsinthelab.apps.guilelessbopomofo.KeyboardPanel
        android:id="@+id/keyboardPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:theme="@style/KeyboardTheme" />


</org.ghostsinthelab.apps.guilelessbopomofo.KeyboardView>