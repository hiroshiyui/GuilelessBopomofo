                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:scaleType="fitCenter"
                    app:keySymbolString="e"
                    app:keyTypeEnum="KEYTYPE_CHARACTER"
                    app:srcCompat="@drawable/ic_guileless_bopomofo_keyboard_hsu_yi_ie" />

                <org.ghostsinthelab.apps.guilelessbopomofo.KeyImageButton
                    android:id="@+id/keyImageButtonR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:scaleType="fitCenter"
                    app:keySymbolString="r"
                    app:keyTypeEnum="KEYTYPE_CHARACTER"
                    app:srcCompat="@drawable/ic_guileless_bopomofo_keyboard_ri" />

                <org.ghostsinthelab.apps.guilelessbopomofo.KeyImageButton
                    android:id="@+id/keyImageButtonT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:scaleType="fitCenter"
                    app:keySymbolString="t"
                    app:keyTypeEnum="KEYTYPE_CHARACTER"
                    app:srcCompat="@drawable/ic_guileless_bopomofo_keyboard_t" />

                <org.ghostsinthelab.apps.guilelessbopomofo.KeyImageButton
                    android:id="@+id/keyImageButtonY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
