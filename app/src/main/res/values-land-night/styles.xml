<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Dark">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="KeyboardPanel">
        <item name="android:background">@color/colorKeyboardPanelBackgroundDark</item>
    </style>

    <style name="DividerKeyboardPanelTopBorder">
        <item name="android:background">@color/colorKeyboardPanelBackground</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:backgroundTintMode">src_atop</item>
    </style>

    <style name="KeyboardTheme">
        <item name="android:background">@color/colorKeyboardBackgroundDark</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button</item>
        <item name="android:imageButtonStyle">@style/Widget.AppCompat.ImageButton</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button</item>
        <item name="imageButtonStyle">@style/Widget.AppCompat.ImageButton</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="KeyboardRow" parent="KeyboardTheme">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="KeyImageButton" parent="Theme.MaterialComponents">
        <item name="android:imageButtonStyle">@style/Widget.AppCompat.ImageButton</item>
        <item name="imageButtonStyle">@style/Widget.AppCompat.ImageButton</item>
        <item name="android:minHeight">52dp</item>
        <item name="minHeight">52dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:topLeftRadius">8dp</item>
        <item name="android:bottomLeftRadius">8dp</item>
        <item name="android:topRightRadius">8dp</item>
        <item name="android:bottomRightRadius">8dp</item>
        <item name="android:background">@color/colorButtonBackgroundDark</item>
        <item name="android:tint">@color/colorButtonForegroundDark</item>
    </style>

    <style name="KeyImageButton.SpecialKeyImageButton">
        <item name="android:backgroundTint">@color/colorKeyboardSpecialKeyBackgroundDark</item>
    </style>

    <style name="KeyImageButton.EnterKeyImageButton">
        <item name="android:backgroundTint">@color/colorKeyboardEnterKeyBackgroundDark</item>
    </style>

    <style name="KeyButton" parent="Theme.MaterialComponents">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button</item>
        <item name="android:textColor">@color/colorButtonForegroundDark</item>
        <item name="android:drawableTint">@color/colorButtonForegroundDark</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:topLeftRadius">8dp</item>
        <item name="android:bottomLeftRadius">8dp</item>
        <item name="android:topRightRadius">8dp</item>
        <item name="android:bottomRightRadius">8dp</item>
    </style>

    <style name="CandidateItem"></style>

    <style name="CandidateItem.Button" parent="Widget.AppCompat.Button">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button</item>
        <item name="android:textColor">@color/colorButtonForegroundDark</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">serif</item>
        <item name="fontFamily">serif</item>
        <item name="android:topLeftRadius">8dp</item>
        <item name="android:bottomLeftRadius">8dp</item>
        <item name="android:topRightRadius">8dp</item>
        <item name="android:bottomRightRadius">8dp</item>
        <item name="android:background">@color/colorButtonBackgroundDark</item>
    </style>
</resources>