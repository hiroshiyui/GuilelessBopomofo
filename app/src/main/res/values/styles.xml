<resources>

    <style name="AppBaseTheme" parent="Theme.Material3.Light">
        <!-- primary -->
        <item name="colorPrimary">@color/colorGuilelessBopomofoMorandiThemeBase6</item>
        <item name="colorOnPrimary">@color/colorGuilelessBopomofoMorandiThemeBase8</item>
        <item name="colorPrimaryContainer">@color/colorGuilelessBopomofoMorandiThemeBase2</item>
        <!-- secondary -->
        <item name="colorSecondary">@color/colorGuilelessBopomofoMorandiThemeBase7</item>
        <item name="colorOnSecondary">@color/colorGuilelessBopomofoMorandiThemeBase10</item>
        <item name="colorSecondaryContainer">@color/colorGuilelessBopomofoMorandiThemeBase1</item>
        <item name="colorOnSecondaryContainer">@color/colorGuilelessBopomofoMorandiThemeBase4</item>
        <!-- tertiary -->
        <item name="colorTertiary">@color/colorGuilelessBopomofoMorandiThemeBase3</item>
        <item name="colorOnTertiary">@color/colorGuilelessBopomofoMorandiThemeBase10</item>
        <item name="colorTertiaryContainer">@color/colorGuilelessBopomofoMorandiThemeBase5</item>
        <item name="colorOnTertiaryContainer">@color/colorGuilelessBopomofoMorandiThemeBase9</item>
        <!-- misc -->
        <item name="actionBarTheme">@style/AppBaseTheme.ActionBar</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="materialButtonStyle">@style/AppBaseTheme.MaterialButton</item>
    </style>

    <style name="AppBaseTheme.ActionBar" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />

    <style name="AppBaseTheme.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:textAppearance">@style/AppBaseTheme.MaterialButtonTextAppearance</item>
    </style>

    <style name="AppBaseTheme.MaterialButtonTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppBaseTheme.KeyboardBaseTheme" parent="AppBaseTheme">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">?attr/colorOnPrimary</item>
    </style>

    <style name="AppBaseTheme.KeyboardBaseTheme.KeyboardPanel" parent="AppBaseTheme.KeyboardBaseTheme">
        <item name="android:background">?attr/colorOnPrimary</item>
    </style>

    <style name="AppBaseTheme.KeyboardBaseTheme.KeyImageButton" parent="AppBaseTheme.KeyboardBaseTheme">
        <item name="android:minHeight">52dp</item>
        <item name="minHeight">52dp</item>
        <item name="android:topLeftRadius">8dp</item>
        <item name="android:bottomLeftRadius">8dp</item>
        <item name="android:topRightRadius">8dp</item>
        <item name="android:bottomRightRadius">8dp</item>
        <item name="android:backgroundTint">?attr/colorOnSecondaryContainer</item>
        <item name="android:tint">?attr/colorOnSecondary</item>
        <item name="android:drawableTint">?attr/colorOnSecondary</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="iconGravity">textStart</item>
        <item name="android:elevation">1dp</item>
    </style>

    <style name="AppBaseTheme.KeyboardBaseTheme.KeyImageButton.SpecialKeyImageButton" parent="AppBaseTheme.KeyboardBaseTheme.KeyImageButton">
        <item name="android:backgroundTint">?attr/colorTertiary</item>
        <item name="iconTint">?attr/colorOnTertiary</item>
    </style>

    <style name="AppBaseTheme.KeyboardBaseTheme.KeyImageButton.EnterKeyImageButton" parent="AppBaseTheme.KeyboardBaseTheme.KeyImageButton">
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
    </style>

    <style name="AppBaseTheme.KeyboardBaseTheme.KeyButton" parent="AppBaseTheme.KeyboardBaseTheme">
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:topLeftRadius">8dp</item>
        <item name="android:bottomLeftRadius">8dp</item>
        <item name="android:topRightRadius">8dp</item>
        <item name="android:bottomRightRadius">8dp</item>
        <item name="android:backgroundTint">?attr/colorOnSecondaryContainer</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:drawableTint">?attr/colorOnSecondary</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="iconGravity">textStart</item>
        <item name="android:elevation">1dp</item>
    </style>

    <style name="AppBaseTheme.KeyboardBaseTheme.KeyboardRow" parent="AppBaseTheme.KeyboardBaseTheme">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="AppBaseTheme.CandidateItem" parent="AppBaseTheme" />

    <style name="AppBaseTheme.CandidateItem.Button" parent="AppBaseTheme.CandidateItem">
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:topLeftRadius">8dp</item>
        <item name="android:bottomLeftRadius">8dp</item>
        <item name="android:topRightRadius">8dp</item>
        <item name="android:bottomRightRadius">8dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">serif</item>
        <item name="fontFamily">serif</item>
        <item name="android:backgroundTint">?attr/colorOnSecondaryContainer</item>
        <item name="android:tint">?attr/colorOnSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:elevation">1dp</item>
    </style>

    <style name="AppBaseTheme.CandidateItem.Paged" parent="AppBaseTheme.CandidateItem">
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppBaseTheme.CandidateItem.SelectionKey" parent="AppBaseTheme.CandidateItem">
        <item name="android:background">@drawable/round_border</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppBaseTheme.Settings" parent="AppBaseTheme" />

    <style name="AppBaseTheme.Settings.Label" parent="AppBaseTheme.Settings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.HeadlineSmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="AppBaseTheme.Settings.Description" parent="AppBaseTheme.Settings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyMedium</item>
    </style>

    <style name="AppBaseTheme.Settings.Widget" parent="AppBaseTheme.Settings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppBaseTheme.Settings.CurrentValue" parent="AppBaseTheme.Settings">
        <item name="android:background">@drawable/round_border</item>
        <item name="android:backgroundTint">?attr/colorTertiary</item>
        <item name="android:textColor">?attr/colorOnTertiary</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="AppBaseTheme.Settings.PrimaryHeader" parent="AppBaseTheme.Settings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.HeadlineMedium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="AppBaseTheme.BufferLayout" parent="AppBaseTheme">
        <item name="android:elevation">4dp</item>
    </style>

    <style name="AppBaseTheme.PreEditBufferTextView" parent="AppBaseTheme">
        <item name="android:background">@color/colorPreEditBufferTextViewBackground</item>
        <item name="android:bufferType">spannable</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">@color/colorPreEditBufferTextView</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="AppBaseTheme.BopomofoBufferTextView" parent="AppBaseTheme">
        <item name="android:background">@color/colorBopomofoBufferTextViewBackground</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">@color/colorBopomofoBufferTextView</item>
        <item name="android:textSize">26sp</item>
    </style>

    <!-- generic (light) theme. -->
    <style name="AppTheme" parent="AppBaseTheme" />

    <style name="KeyboardTheme" parent="AppBaseTheme.KeyboardBaseTheme" />

    <style name="KeyboardPanel" parent="AppBaseTheme.KeyboardBaseTheme.KeyboardPanel" />

    <style name="KeyboardRow" parent="AppBaseTheme.KeyboardBaseTheme.KeyboardRow" />

    <style name="KeyImageButton" parent="AppBaseTheme.KeyboardBaseTheme.KeyImageButton" />

    <style name="KeyImageButton.SpecialKeyImageButton" parent="AppBaseTheme.KeyboardBaseTheme.KeyImageButton.SpecialKeyImageButton" />

    <style name="KeyImageButton.EnterKeyImageButton" parent="AppBaseTheme.KeyboardBaseTheme.KeyImageButton.EnterKeyImageButton" />

    <style name="KeyButton" parent="AppBaseTheme.KeyboardBaseTheme.KeyButton" />

    <style name="CandidateItem" parent="AppBaseTheme.CandidateItem" />

    <style name="CandidateItem.Button" parent="AppBaseTheme.CandidateItem.Button" />

    <style name="CandidateItem.SelectionKey" parent="AppBaseTheme.CandidateItem.SelectionKey" />

    <style name="CandidateItem.Paged" parent="AppBaseTheme.CandidateItem.Paged" />

    <style name="Settings" parent="AppTheme" />

    <style name="Settings.Label" parent="AppBaseTheme.Settings.Label" />

    <style name="Settings.Description" parent="AppBaseTheme.Settings.Description" />

    <style name="Settings.Widget" parent="AppBaseTheme.Settings.Widget" />

    <style name="Settings.PrimaryHeader" parent="AppBaseTheme.Settings.PrimaryHeader" />

    <style name="Settings.CurrentValue" parent="AppBaseTheme.Settings.CurrentValue" />

    <style name="BufferLayout" parent="AppBaseTheme.BufferLayout" />

    <style name="PreEditBufferTextView" parent="AppBaseTheme.PreEditBufferTextView" />

    <style name="BopomofoBufferTextView" parent="AppBaseTheme.BopomofoBufferTextView" />
</resources>